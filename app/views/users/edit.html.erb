<h1>Edit User</h1>
<%= form_with model: @user do |form| %>
  <div class="form">
  	<div>
      <%= form.label :name %><br>
      <% @user.errors.full_messages_for(:name).each do |message| %>
        <div><%= message %></div>
      <% end %>
      <%= form.text_field :name %>
    </div>

    <div>
      <%= form.label :surname %><br>
      <% @user.errors.full_messages_for(:surname).each do |message| %>
        <div><%= message %></div>
      <% end %>
      <%= form.text_field :surname %>
    </div>

    <div>
      <%= form.label :password %><br>
      <% @user.errors.full_messages_for(:password).each do |message| %>
        <div><%= message %></div>
      <% end %>
      <%= form.text_field :password, type: "password" %>
    </div>

    <div>
      <%= form.label :password_confirmation, "Confirmation" %><br>
      <% @user.errors.full_messages_for(:password_confirmation).each do |message| %>
        <div><%= message %></div>
      <% end %>
      <%= form.text_field :password_confirmation, type: "password" %>
    </div>

    <div>
      <%= form.submit "Save" %>
    </div>
    
    <%= link_to "Back to the main page",  posts_path %>
  </div>
<% end %>
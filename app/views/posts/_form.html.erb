<%= form_with model: @post do |form| %>
  <div class="form">
    <div>
      <%= form.label :title %><br>
      <%= form.text_field :title %>
      <% @post.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
      <% end %>
    </div>

    <div>
      <%= form.label :picture_url %><br>
      <%= form.text_field :picture_url %>
    </div>

    <div>
      <%= form.label :body %><br>
      <%= form.text_area :body %>
      <% @post.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
    </div>

    <div>
      <%= form.submit %>
    </div>

    <%= link_to "Back to the main page",  posts_path %>
  </div>
<% end %>
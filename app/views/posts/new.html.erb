<h1>New Post</h1>

<%= form_with model: @post do |form| %>
  <div class="form">
    <div>
      <%= form.label :title %><br>
      <%= form.text_field :title %>
    </div>

    <div>
      <%= form.label :picture_url %><br>
      <%= form.text_field :picture_url %>
    </div>

    <div>
      <%= form.label :body %><br>
      <%= form.text_area :body %>
    </div>

    <div>
      <%= form.submit %>
    </div>
  </div>
<% end %>


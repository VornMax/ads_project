<h1><%= @post.title %></h1>

<div class="container">
  <div><%= @post.picture_url %> </div><br>

  <p><%= @post.body %></p><br>

  <p><%= @post.created_at %></p><br>

  <%= link_to "Edit", edit_post_path(@post) %><br><br>
  <%= link_to "Delete", post_path(@post),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %><br><br>
  <%= link_to "Back to the main page",  posts_path %>
</div>


<h1>Log in</h1>
<div class="form">
  <%= form_for(:session, url: login_path) do |form| %>
    <div>
      <%= form.label :email %><br>
      <%= form.email_field :email %>
    </div>

    <div>
      <%= form.label :password %><br>
      <%= form.password_field :password, type: "password" %>
    </div>

    <div>
      <%= form.submit "Log in" %>
    </div>
  <% end %>

<p>New user? <%= link_to "Sign up now!", signup_path %></p>
<%= link_to "Back to the main page",  posts_path %>
</div>